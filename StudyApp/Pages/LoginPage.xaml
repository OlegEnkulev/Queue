<Page x:Class="StudyApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="490"
      Title="LoginPage" FontFamily="Century Gothic" FontSize="15">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
                <Label Content="Логин:" Width="200" Foreground="White"/>
                <TextBox x:Name="LoginBox" Width="280"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
                <Label Content="Пароль:" Width="200" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox" Width="280"/>
            </StackPanel>
            <Button x:Name="LoginBTN" Content="Войти" Margin="5" Width="250" Click="LoginBTN_Click"/>
        </StackPanel>
    </Grid>
</Page>
