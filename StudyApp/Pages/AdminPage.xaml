<Page x:Class="StudyApp.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="490"
      Title="AdminPage" FontFamily="Century Gothic" FontSize="15">

    <Grid>
        <StackPanel>
            <Label Content="Пользователи:" Foreground="White" HorizontalContentAlignment="Center" Margin="5"/>
            <ScrollViewer Height="250" Margin="5">
                <StackPanel x:Name="UsersScrollViewer" Width="460">
                    
                </StackPanel>
            </ScrollViewer>
            <Button x:Name="CreateUserBTN" Content="Создать нового пользователя" Margin="5" Width="250" Click="CreateUserBTN_Click"/>
            <Button x:Name="ExitBTN" Content="Выйти" Margin="5" Width="250" Click="ExitBTN_Click"/>
        </StackPanel>
    </Grid>
</Page>
